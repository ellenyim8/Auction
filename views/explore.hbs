    <h1>Explore</h1>   
    <hr><br>
    <div class="row" id = "SearchBarDiv">
        <div class="col">
            <form onsubmit="event.preventDefault()">
            <input class="form-control" type="search" id="search_bar" onkeyup="search()" placeholder="Search for items">
            </form>
        </div>
    </div>
        <br>

    {{!-- <h3>Explore</h3> --}}
    <div class="row" id = "item_display">
        {{#each item_list}}            
        <div class="col-md-3 border py-3 px-4" id="{{this.name}}">
            <div class = "text-center">
                <img class="item-small-pic" src="/images/item/{{this.image}}"  id=""></img>
                <h4>{{this.name}}</h4>
                <hr>
            </div>

            <div class="row">
                <div class="col">
                    <h5>Price: ${{this.price}}</h5>
                    <p>Sold by: {{this.seller}}</p>
                </div>
                {{!-- <div class="col text-center">
                    <a href="/item/{{this._id}}" class="btn btn-primary" role="button">See Item</a>
                </div> --}}
            </div>
            <p class="small">Listed: {{this.creationDate}}</p>
                <div class="row">
                <div class="col text-right">
                    <a href="/item/{{this._id}}" class="btn btn-primary btn-block" role="button">See Item</a>
                </div>
                <div class="col text-left">
                    <a href="/item/{{this._id}}/purchase" class="btn btn-primary btn-block" role="button">Buy Now</a>
                </div>
            </div>
            
        </div>
        {{/each}}
    </div>  
    
