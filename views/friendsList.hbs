<div class="content-wrapper"> 
    <br><br>
    <h1>Friends List</h1>
    <hr><br>
    <div class="row">

            {{!--List the current user's friend array. View Profile. Delete Friend --}}
            {{#each userObj.friends}}
                <div class="col-md-3 border py-3 px-4">
                    <div class = "text-center">
                        <h4>{{this}}</h4>
                        <hr>
                    </div>

                    <div class="row">
                        <div class="col">
                            <form action ='/viewProfile' method="GET" id="get-form" style ="display: inline;">               
                            <input type = "hidden" value = {{this}} name ="friendprofile">
                            <button type = "submit" value ="View Profile" name = "view" class="btn-lg btn-block btn border">View Profile</button>   
                            </form>
                        </div>
                        <div class="col text-center">
                            <form action ='/delete_friend' method="POST" id="request-form" style ="display: inline;">               
                            <input type = "hidden" value = {{this}} name ="friendlist">
                            <button type = "submit" value ="Delete" name = "delete" class="btn-lg btn-block btn border ">Remove</button>   
                            </form>
                        </div>
                    </div>
                </div>
            {{/each}}

    </div>

    <br>
    <hr>
    <br>
    <div class="row">
        <div class="col-md-6 border py-3 px-4" id = "menu1" >
            <h3 class="text-center">Friend Requests</h3>
            <hr>
            {{#each userObj.friend_requests}}
            <form action ='/accept_friend' method="POST" id="request-form">               
                <input type = "hidden" value = {{this}} name ="friendlist">
                <h5>{{this}}</h5>
                <input type = "submit" value ="Accept" name = "accept">
                <input type = "submit" value ="Decline" name = "decline"></li>
            </form>
            <br>
            {{/each}}
        </div>
        {{!--Search user and send the Request --}}
        <div class="col-md-6 border py-3 px-4" >
            <h2 class="text-center">Add Friends</h2>
            <hr>
            <form action = '/friend_requests' method = "POST" id="request-form" style="display: inline;">
                <div class="form-group">
                    <input type="addUsername" class="form-control" name="addUsername" placeholder="Enter Username"/>
                    <br>
                    <input type="submit" id="OK" value="Request" style="display:inline">
                </div>
            </form>
        </div>
