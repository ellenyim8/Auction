    <script>
    //Search Bar
    //https://www.w3schools.com/howto/howto_js_filter_lists.asp
    function search() {
        search_input = document.getElementById('search_bar');
        display= document.getElementById('item_display').children;
        search_filter = search_input.value.toLowerCase();
        for(i=0; i < display.length; i++){
            item = display[i].id.toLowerCase();
            item.indexOf(search_filter)!=-1?display[i].style.display="": display[i].style.display="none";
        }
    }
    </script>

